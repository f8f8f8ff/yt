{{define "main"}}
	<p><a href="/">home</a></p>
	<form action='/zip' method='POST' autocomplete='off'>
		<p><input type='submit' value='download'></p>
		{{range .Files}}
			<input type='checkbox' name='files' value='{{.Path}}' />
			<label for='{{.Path}}'>
			<a href="{{.Path}}">{{.Name}}</a> ({{.Size}})
			{{if eq "youtube" .Source.String}}
				<a href="{{.ExtLink}}">[ext]</a>
			{{end}}
			</label>
			<br>
		{{end}}
	</form>
	<script src="/static/checkbox.js"></script>
{{end}}
